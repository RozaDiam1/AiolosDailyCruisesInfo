<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.aiolosdailycruisesinfo.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/boat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img2"
            android:scaleType="fitXY"
            android:autoLink="web"
           />

        <TextView
        android:id="@+id/txt1"
        android:layout_margin="8dp"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hire private daily cruises from Leros
to all nearby islands!" />

    <TextView
        android:id="@+id/txt2"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:textColor="#000000"
      android:layout_below="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact:aioloscruises@gmail.com"/>


        <Button
            android:id="@+id/Gotourl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="Gotourl"
            android:layout_below="@id/txt2"
            android:text="Visit website?"
            />
    </RelativeLayout>
</ScrollView>